<% if collection.respond_to?(:current_page) %>
  <div class="mt-8">
    <nav role="navigation" aria-label="Pagination Navigation" class="flex items-center justify-between">
      <div class="flex justify-between flex-1 sm:hidden">
        <% if collection.prev_page %>
          <%= link_to resource_path(params.except(:controller, :action).permit!.to_h.merge(page: collection.prev_page)),
                class: "relative inline-flex items-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-md hover:bg-slate-50 dark:bg-slate-800 dark:border-slate-600 dark:text-slate-300 dark:hover:bg-slate-700" do %>
            <%= t('pagination.previous') %>
          <% end %>
        <% else %>
          <span class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-slate-400 bg-white border border-slate-300 rounded-md cursor-not-allowed dark:bg-slate-800 dark:border-slate-600">
            <%= t('pagination.previous') %>
          </span>
        <% end %>

        <% if collection.next_page %>
          <%= link_to resource_path(params.except(:controller, :action).permit!.to_h.merge(page: collection.next_page)),
                class: "relative ml-3 inline-flex items-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-md hover:bg-slate-50 dark:bg-slate-800 dark:border-slate-600 dark:text-slate-300 dark:hover:bg-slate-700" do %>
            <%= t('pagination.next') %>
          <% end %>
        <% else %>
          <span class="relative ml-3 inline-flex items-center px-4 py-2 text-sm font-medium text-slate-400 bg-white border border-slate-300 rounded-md cursor-not-allowed dark:bg-slate-800 dark:border-slate-600">
            <%= t('pagination.next') %>
          </span>
        <% end %>
      </div>

      <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-slate-700 dark:text-slate-300">
            <%= t('pagination.showing') %>
            <span class="font-medium"><%= collection.offset_value + 1 %></span>
            <%= t('pagination.to') %>
            <span class="font-medium"><%= [collection.offset_value + collection.limit_value, collection.total_count].min %></span>
            <%= t('pagination.of') %>
            <span class="font-medium"><%= collection.total_count %></span>
            <%= t('pagination.results') %>
          </p>
        </div>
        <div>
          <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
            <% # Previous Page %>
            <% if collection.prev_page %>
              <%= link_to resource_path(params.except(:controller, :action).permit!.to_h.merge(page: collection.prev_page)),
                    class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-slate-300 bg-white text-sm font-medium text-slate-500 hover:bg-slate-50 dark:bg-slate-800 dark:border-slate-600 dark:text-slate-400 dark:hover:bg-slate-700" do %>
                <span class="sr-only"><%= t('pagination.previous') %></span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-slate-300 bg-white text-sm font-medium text-slate-300 cursor-not-allowed dark:bg-slate-800 dark:border-slate-600">
                <span class="sr-only"><%= t('pagination.previous') %></span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </span>
            <% end %>

            <% # Page Numbers %>
            <% page_range = [] %>
            <% current_page = collection.current_page %>
            <% total_pages = collection.total_pages %>

            <% if total_pages <= 7 %>
              <% page_range = (1..total_pages).to_a %>
            <% else %>
              <% if current_page <= 4 %>
                <% page_range = [1, 2, 3, 4, 5, '...', total_pages] %>
              <% elsif current_page >= total_pages - 3 %>
                <% page_range = [1, '...', total_pages - 4, total_pages - 3, total_pages - 2, total_pages - 1, total_pages] %>
              <% else %>
                <% page_range = [1, '...', current_page - 1, current_page, current_page + 1, '...', total_pages] %>
              <% end %>
            <% end %>

            <% page_range.each do |page| %>
              <% if page == '...' %>
                <span class="relative inline-flex items-center px-4 py-2 border border-slate-300 bg-white text-sm font-medium text-slate-700 dark:bg-slate-800 dark:border-slate-600 dark:text-slate-300">
                  ...
                </span>
              <% elsif page == current_page %>
                <span aria-current="page" class="z-10 relative inline-flex items-center px-4 py-2 border border-blue-500 bg-blue-50 text-sm font-medium text-blue-600 dark:bg-blue-900/20 dark:border-blue-400 dark:text-blue-400">
                  <%= page %>
                </span>
              <% else %>
                <%= link_to resource_path(params.except(:controller, :action).permit!.to_h.merge(page: page)),
                      class: "relative inline-flex items-center px-4 py-2 border border-slate-300 bg-white text-sm font-medium text-slate-700 hover:bg-slate-50 dark:bg-slate-800 dark:border-slate-600 dark:text-slate-300 dark:hover:bg-slate-700" do %>
                  <%= page %>
                <% end %>
              <% end %>
            <% end %>

            <% # Next Page %>
            <% if collection.next_page %>
              <%= link_to resource_path(params.except(:controller, :action).permit!.to_h.merge(page: collection.next_page)),
                    class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-slate-300 bg-white text-sm font-medium text-slate-500 hover:bg-slate-50 dark:bg-slate-800 dark:border-slate-600 dark:text-slate-400 dark:hover:bg-slate-700" do %>
                <span class="sr-only"><%= t('pagination.next') %></span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-slate-300 bg-white text-sm font-medium text-slate-300 cursor-not-allowed dark:bg-slate-800 dark:border-slate-600">
                <span class="sr-only"><%= t('pagination.next') %></span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </span>
            <% end %>
          </nav>
        </div>
      </div>
    </nav>
  </div>
<% end %>
