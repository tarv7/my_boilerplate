<div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-200 dark:border-slate-700 mb-8 overflow-hidden" data-controller="filters">
  <div class="px-6 py-4 bg-slate-50 dark:bg-slate-700/50 border-b border-slate-200 dark:border-slate-600">
    <div class="flex items-center gap-3">
      <svg class="w-5 h-5 text-slate-600 dark:text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"/>
      </svg>
      <h3 class="text-lg font-semibold text-slate-800 dark:text-slate-200"><%= t(".title") %></h3>
      <button class="ml-auto text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium" data-action="click->filters#clearAll">
        <%= t(".clear_all") %>
      </button>
    </div>
  </div>

  <%= form_with url: form_path, method: :get, local: true, class: "p-6", data: { filters_target: "form" } do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

      <% # Generate filter inputs for each attribute %>
      <% filter_fields.each do |attribute| %>
        <div class="filter-group">
          <%= form.label attribute.to_sym, attribute.humanize, class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2" %>

          <% # Determine field type based on attribute %>
          <% column = model.columns_hash[attribute] %>
          <% case column&.type %>
          <% when :boolean %>
            <%= form.select attribute.to_sym,
                  options_for_select([
                    [t('.all'), ''],
                    [t('.yes_'), 'true'],
                    [t('.no_'), 'false']
                  ], params[attribute]),
                  {},
                  class: "w-full px-4 py-2.5 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white transition-colors duration-200",
                  data: { filters_target: "input" } %>
          <% when :text %>
            <%= form.text_area attribute.to_sym,
                  value: params[attribute],
                  placeholder: t('.search_placeholder', attribute: attribute.humanize.downcase),
                  rows: 2,
                  class: "w-full px-4 py-2.5 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 transition-colors duration-200",
                  data: { filters_target: "input" } %>
          <% when :date, :datetime %>
            <div class="space-y-2">
              <%= form.date_field "#{attribute}_from".to_sym,
                    value: params["#{attribute}_from"],
                    placeholder: t('.from_date'),
                    class: "w-full px-4 py-2.5 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white transition-colors duration-200",
                    data: { filters_target: "input" } %>
              <%= form.date_field "#{attribute}_to".to_sym,
                    value: params["#{attribute}_to"],
                    placeholder: t('.to_date'),
                    class: "w-full px-4 py-2.5 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white transition-colors duration-200",
                    data: { filters_target: "input" } %>
            </div>
          <% when :integer, :decimal, :float %>
            <div class="grid grid-cols-2 gap-2">
                              <%= form.number_field "#{attribute}_min".to_sym,
                    value: params["#{attribute}_min"],
                    placeholder: t('.min_value'),
                    class: "w-full px-4 py-2.5 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white transition-colors duration-200",
                    data: { filters_target: "input" } %>
              <%= form.number_field "#{attribute}_max".to_sym,
                    value: params["#{attribute}_max"],
                    placeholder: t('.max_value'),
                    class: "w-full px-4 py-2.5 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white transition-colors duration-200",
                    data: { filters_target: "input" } %>
            </div>
          <% else %>
            <%= form.text_field attribute.to_sym,
                  value: params[attribute],
                  placeholder: t('.search_placeholder', attribute: attribute.humanize.downcase),
                  class: "w-full px-4 py-2.5 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 transition-colors duration-200",
                  data: { filters_target: "input" } %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Filter Actions -->
    <div class="flex items-center justify-between pt-6 mt-6 border-t border-slate-200 dark:border-slate-600">
      <div class="flex items-center gap-4">
        <%= form.submit t('.apply'), class: "inline-flex items-center gap-2 px-6 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        <%= link_to form_path, class: "inline-flex items-center gap-2 px-4 py-2.5 text-slate-600 dark:text-slate-400 hover:text-slate-800 dark:hover:text-slate-200 font-medium transition-colors duration-200" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          <%= t('.reset') %>
        <% end %>
      </div>

      <% # Show active filters and sort info %>
      <div class="flex items-center gap-4">
        <% if active_filters(model).any? %>
          <span class="text-sm text-slate-500 dark:text-slate-400">
            <%= pluralize(active_filters(model).count, 'filter') %> active
          </span>
        <% end %>

        <% if params[:sort].present? %>
          <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 text-sm font-medium rounded-lg">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if params[:direction] == 'desc' %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
              <% end %>
            </svg>
            Sorted by <%= params[:sort].humanize %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
